<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mLayoutDeuda"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#A455E43B"
    android:padding="8dp">

    <TextView
        android:id="@+id/rvCantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="28dp"
        android:text="Cantidad"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@+id/rvPrecio"
        app:layout_constraintStart_toEndOf="@+id/rvProducto"
        app:layout_constraintTop_toTopOf="@+id/rvPrecio"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/rvProducto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"
        android:text="Producto"
        app:layout_constraintBottom_toTopOf="@+id/rvPrecio"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="65dp"
        android:layout_height="67dp"
        android:layout_marginStart="4dp"
        android:background="#00C5D3C0"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/ic_action_producto" />

    <TextView
        android:id="@+id/rvPrecioTotal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:text="S/.PRECIO TOTAL"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/rvPrecio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="S/.c/u"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/rvProducto"
        app:layout_constraintStart_toStartOf="@+id/rvProducto" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Precio Total"
        app:layout_constraintEnd_toEndOf="@+id/rvPrecioTotal"
        app:layout_constraintStart_toStartOf="@+id/rvPrecioTotal"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>