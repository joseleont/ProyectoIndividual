<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dialogos_Fragmentos.MenuAyuda">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:id="@+id/idLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#34918F"
        android:elevation="8dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView"
            android:layout_width="321dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:text="@string/uso_de_la_aplicaci_n"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/btnMenuAyuda"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_action_check"
            android:textAlignment="textEnd" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/dialogTexto2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bienvenido!!                                                                                Vendedor:                                                                                           En esta aplicación facilita el control de las deudas de los clientes con cuentas en esta aplicación, además, podrás crear cuentas apartes. La ventaja de la aplicación es que se puede observar el historial de pagos y los productos comprados por cada cliente cliente."
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/dialogTexto"
                android:layout_width="365dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                tools:text="                                                                                                                                                                   Cliente:                                                                                                                          Gracias a esta aplicación puede observar las deudas pendiente que faltan por saldar. Además, puedes ver el historial de pagos y los productos adquiridos en la deuda. FInalmente, usted puede modificar su perfil a su gusto." />

        </LinearLayout>
    </ScrollView>


</FrameLayout>